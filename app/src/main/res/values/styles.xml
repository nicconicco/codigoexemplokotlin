<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppThemeManager" />

    <!-- Tema-base -->
    <style name="BaseAppThemeManager" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Cor primária do aplicativo -->
        <item name="colorPrimary">@color/white</item>
        <!-- Variação escura da cor primária para a status bar e contextual app bars -->
        <item name="colorPrimaryDark">@color/cinza_shape</item>
        <!-- Cor de acentuação para as views (checkbox, textfield etc.) -->
        <item name="colorAccent">@color/cinza_1</item>
        <!-- Cor para o efeito ripple -->
        <item name="colorControlHighlight">#f1f1f1</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cinza_1</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabLayoutStyleManager" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/cinza_2</item>
        <item name="tabIndicatorColor">@color/cinza_shape</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabConsultExam" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabBackground">@color/cinza_1</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyleConcierge</item>
    </style>

    <style name="CustomTabTexStyleConcierge" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <color name="cinza_shape">#ababab</color>
    <color name="cinza_2">#474747</color>
</resources>
